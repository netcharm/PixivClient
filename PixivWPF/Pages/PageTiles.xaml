<Page x:Class="PixivWPF.Pages.PageTiles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixivWPF.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageTiles">

    <Page.Resources>
        <DataTemplate x:Key="ImageTile" x:Name="ImageTile" x:Uid="ImageTile">
            <Grid Background="{StaticResource AccentColorBrush}" Width="128" Tag="{Binding Illust}" Margin="0,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="128"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <mah:ProgressRing Grid.Row="0" Width="72" Height="72" Opacity="0.62" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image Grid.Row="0" 
                       Source="{Binding Source}" 
                       ToolTip="{Binding ToolTip}"
                       Tag="{Binding Illust}"
                       Stretch="Uniform" Width="128" Height="128"
                       Margin="4,4,4,4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <mah:Badged Grid.Row="0" Badge="{Binding Count}" BadgePlacementMode="TopRight" Margin="0,16,16,0" FontSize="16" FontFamily="Consolas" Visibility="{Binding Badge}" />
                <TextBlock Grid.Row="1" Text="{Binding Subject}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="730"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0"
                  x:Name="ImageTiles" x:Uid="ImageTiles"
                  IsSynchronizedWithCurrentItem="true"                  
                  SelectionChanged="ImageTiles_SelectionChanged"
                  ItemsSource="{Binding local:ImageList, Mode=OneWay}" 
                  ItemTemplate="{StaticResource ImageTile}"
                  BorderBrush="Transparent"
                  HorizontalAlignment="Center" VerticalAlignment="Top"
                  mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--<WrapPanel ItemWidth="136" MinWidth="600"/>-->
                    <UniformGrid Columns="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ListView>
        <mah:ProgressRing Grid.Column="0" 
                          x:Name="ImageTilesWait" 
                          Width="128" Height="128" 
                          Opacity="0.9" Visibility="Hidden"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Viewbox Grid.Column="1" StretchDirection="DownOnly" Margin="4,4,4,4" >
            <Image x:Name="Preview" x:Uid="Preview" 
                   Stretch="None"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Viewbox>
        <mah:ProgressRing Grid.Column="1" Margin="4,4,4,4"
                          x:Name="PreviewWait"
                          Width="128" Height="128" Opacity="0.62" 
                          Visibility="Hidden"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
