<Page
      x:Class="PixivWPF.Pages.PageNav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixivWPF.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
      mc:Ignorable="d"       
      x:Name="NavPage"
      Title="Navigation"
      d:DesignHeight="600" 
      d:DesignWidth="160">

    <Grid Margin="4,4,4,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Top">
            <ToggleButton x:Name="btnGotoRecommended" x:Uid="btnGotoRecommended" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Recommended" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoLatest" x:Uid="btnGotoLatest" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Latest" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>

            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,4"/>

            <ToggleButton x:Name="btnGotoFollowing" x:Uid="btnGotoFollowing" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Following" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoFollowingPrivate" x:Uid="btnGotoFollowingPrivate" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Following Private" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            
            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,4"/>

            <ToggleButton x:Name="btnGotoFavorite" x:Uid="btnGotoFavorite" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Favorite" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoFavoritePrivate" x:Uid="btnGotoFavoritePrivate" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Favorite Private" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>

            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,8"/>

            <ToggleButton x:Name="btnGotoRankingDay" x:Uid="btnGotoRankingDay" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Day" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingDayR18" x:Uid="btnGotoRankingDayR18" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Day R18" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingDayMale" x:Uid="btnGotoRankingDayMale" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Day Male" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingDayFemale" x:Uid="btnGotoRankingDayFemale" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Day Female" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingDayMaleR18" x:Uid="btnGotoRankingDayMaleR18" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Day Male R18" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingDayFemaleR18" x:Uid="btnGotoRankingDayFemaleR18" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Day Female R18" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>

            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,8"/>

            <ToggleButton x:Name="btnGotoRankingWeek" x:Uid="btnGotoRankingWeek" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left"
                    Content="Ranking By Week" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingWeekOriginal" x:Uid="btnGotoRankingWeekOriginal" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left"
                    Content="Ranking By Week Original" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingWeekRookie" x:Uid="btnGotoRankingWeekRookie" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left"
                    Content="Ranking By Week Rookie" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingWeekR18" x:Uid="btnGotoRankingWeekR18" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left"
                    Content="Ranking By Week R18" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <ToggleButton x:Name="btnGotoRankingWeekR18G" x:Uid="btnGotoRankingWeekR18G" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left"
                    Content="Ranking By Week R18G" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>

            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,4"/>

            <ToggleButton x:Name="btnGotoRankingMonth" x:Uid="btnGotoRankingMonth" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Month" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>

            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,8"/>

            <ToggleButton x:Name="btnGotoRankingYear" x:Uid="btnGotoRankingYear" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Ranking By Year" Click="NavItem_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Grid.Row="1" >
            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="btnGotoPrevPage" x:Uid="btnGotoPrevPage" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Prev Page" Click="NavPage_Click" IsEnabled="False"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
                <Button Grid.Column="1" x:Name="btnGotoNextPage" x:Uid="btnGotoNextPage" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Right"
                    Content="Next Page" Click="NavPage_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="3"  VerticalAlignment="Bottom">
            <Button x:Name="btnGotoLogin" x:Uid="btnGotoLogin" Visibility="Collapsed"
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Style="{DynamicResource SquareButtonStyle}" HorizontalContentAlignment="Left" 
                    Content="Login" Click="NavLogin_Click"
                    mah:ControlsHelper.ContentCharacterCasing="Normal" BorderThickness="1"/>
            <Line Stroke="{DynamicResource AccentColorBrush}" StrokeThickness="2" Margin="0,8"/>
            <TextBlock x:Name="lbAccent" x:Uid="lbAccent" Text="Accent Select" Margin="0,0,0,4"
                       Foreground="{DynamicResource IdealForegroundColorBrush}"/>
            <ComboBox x:Name="cbAccent" x:Uid="cbAccent" Margin="0,0,0,4" 
                      IsEditable="False" 
                      Foreground="{DynamicResource IdealForegroundColorBrush}"
                      SelectionChanged="Accent_SelectionChanged" />
            <Button x:Name="ToggleTheme" x:Uid="ToggleTheme" Content="Toggle Theme" 
                    Style="{DynamicResource SquareButtonStyle}" 
                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                    Margin="0,4,0,0"
                    HorizontalContentAlignment="Left" BorderThickness="1"
                    Click="ToggleTheme_Click" 
                    mah:ControlsHelper.ContentCharacterCasing="Normal"
                    mah:ButtonHelper.PreserveTextCase="True"/>
        </StackPanel>
    </Grid>
</Page>
