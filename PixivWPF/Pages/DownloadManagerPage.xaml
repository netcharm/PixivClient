<Page x:Class="PixivWPF.Pages.DownloadManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:Common="clr-namespace:PixivWPF.Common"
      xmlns:local="clr-namespace:PixivWPF.Pages"
      Loaded="Page_Loaded"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Download Manager">

    <Page.Resources>
        <DataTemplate x:Key="DownloadItemTemplate" DataType="{x:Type Common:DownloadInfo}"
                      x:Name="DownloadItem" x:Uid="DownloadItem">
            <Common:DownloadItem Tag="{Binding}"
                Background="Transparent"
                BorderBrush="{DynamicResource AccentColorBrush}"                
                BorderThickness="1"/>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="2,4,2,4">
            <Button x:Name="PART_DownloadAll" x:Uid="DownloadAll" Margin="2,0,2,0" Click="DownloadAll_Click"
                    ToolTip="Download All File"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Style="{DynamicResource SquareButtonStyle}" BorderThickness="1"
                    BorderBrush="{DynamicResource AccentColorBrush}"
                    Foreground="{DynamicResource LabelTextBrush}" 
                    Background="Transparent"
                    mah:ButtonHelper.PreserveTextCase="True">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Kind="Download" Foreground="{DynamicResource AccentColorBrush}" Width="16" Height="16"/>
                    <TextBlock Text="Download All" Margin="8,0,0,0" FontSize="10"/>
                </StackPanel>
            </Button>

        </StackPanel>
        <ListView Grid.Row="1"  x:Name="DownloadItems" x:Uid="DownloadItems"
                  IsSynchronizedWithCurrentItem="true"
                  Style="{DynamicResource VirtualisedMetroListView}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.CacheLength ="500"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  SelectionMode="Single"
                  ItemsSource="{Binding Items, Mode=OneWay, NotifyOnSourceUpdated=True}"
                  ItemTemplate="{DynamicResource DownloadItemTemplate}">
            <!--<ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel ScrollViewer.CanContentScroll="True" UseLayoutRounding="True"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>-->
        </ListView>
    </Grid>
</Page>
