<Page x:Class="PixivWPF.Common.DateTimePicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixivWPF.Common"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      KeyUp="Page_KeyUp"
      MouseDown="Page_MouseDown"
      d:DesignHeight="300" d:DesignWidth="300"
      Width="auto" Height="auto"
      Title="DateTimePicker">

    <Grid>
        <Calendar x:Name="DatePicker"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                  SelectionMode="SingleDate"
                  SelectedDatesChanged="CommandDatePicker_SelectedDatesChanged" 
                  MouseWheel="DatePicker_MouseWheel" MouseDoubleClick="DatePicker_MouseDoubleClick">
            <Calendar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.251"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.391"/>
                </TransformGroup>
            </Calendar.RenderTransform>
        </Calendar>
    </Grid>
</Page>
